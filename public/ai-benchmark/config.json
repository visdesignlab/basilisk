{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.3.1/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Basilisk's Bane",
    "version": "pilot",
    "authors": ["The reVISit Team"],
    "date": "2023-04-30",
    "description": "A demo of form elements in reVISit.",
    "organizations": ["University of Utah", "WPI"]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "withSidebar": true,
    "enumerateQuestions": true,
    "urlParticipantIdParam": "PROLIFIC_PID",
    "studyEndMsg": "**Thank you for completing the study. You may click this link and return to Prolific**: [https://app.prolific.com/submissions/complete?cc=CU7QI80R](https://app.prolific.com/submissions/complete?cc=CU7QI80R)",
    "participantNameField": "introduction.prolificId"
  },
  "baseComponents": {
    "scatterPlot": {
      "description": "A scatterplot and accompanying bar chart.",
      "type": "react-component",
      "path": "example-brush-interactions/assets/BrushPlot.tsx",
      "nextButtonLocation": "sidebar",
      "instructionLocation": "sidebar",
      "response": []
    },
    "canvas": {
      "description": "Drawing thingy.",
      "type": "react-component",
      "path": "ai-benchmark/assets/Canvas.tsx",
      "nextButtonLocation": "sidebar",
      "instructionLocation": "sidebar",
      "response": []
    },
    "chart-stimulus-insight": {
      "type": "react-component",
      "path": "ai-benchmark/assets/ChartViewer.tsx",
      "nextButtonText": "Next",
      "parameters": { "question": "insight" },
      "response": [
        {
          "id": "q-name",
          "required": true,
          "prompt": "What observations and conclusions can you make based on this slide? Please enter in the box below, one observation per line:",
          "location": "belowStimulus",
          "type": "longText",
          "placeholder": ""
        }
      ]
    }
  },
  "components": {
    "introduction": {
      "withSidebar": false,
      "type": "markdown",
      "path": "ai-benchmark/assets/introduction.md",
      "response": [
        {
          "id": "prolificId",
          "prompt": "Please enter your Prolific ID",
          "location": "belowStimulus",
          "type": "shortText",
          "placeholder": "Prolific ID",
          "paramCapture": "PROLIFIC_PID"
        }
      ]
    },
    "consent": {
      "withSidebar": false,
      "type": "markdown",
      "recordAudio": false,
      "path": "ai-benchmark/assets/consent.md",
      "nextButtonText": "Agree",
      "response": [
        {
          "id": "accept",
          "prompt": "Do you consent to the study and wish to continue?",
          "requiredValue": "Accept",
          "location": "belowStimulus",
          "type": "radio",
          "options": ["Decline", "Accept"]
        }
      ]
    },
    "Form Elements": {
      "type": "questionnaire",
      "withSidebar": false,
      "response": [
        {
          "id": "q-numerical",
          "prompt": "How old are you?",
          "infoText": "This numerical input accepts values between 0 and 100.",
          "type": "numerical",
          "placeholder": "Enter your age here",
          "withDontKnow": false
        },
        {
          "id": "q-slider",
          "prompt": "How good are you at working with pies?",
          "infoText": "Use the slider to indicate your rating on a scale from 'Not at all good' to 'Extremely good'.",
          "type": "slider",
          "startingValue": 50,
          "spacing": 50,
          "options": [
            {
              "label": "Not at all good",
              "value": 0
            },
            {
              "label": "Mid",
              "value": 50
            },
            {
              "label": "Extremely good",
              "value": 100
            }
          ]
        },
        {
          "id": "q-short-text",
          "prompt": "What is your favorite kind of chart?",
          "infoText": "Your response can be a few words or a short sentence.",
          "type": "shortText",
          "placeholder": "Enter your answer here"
        },
        {
          "id": "q-dropdown",
          "prompt": "Which visualization authoring tool are you most comfortable with?",
          "infoText": "Select the tool you prefer from the dropdown menu.",
          "type": "dropdown",
          "placeholder": "Enter your preference",
          "options": ["Tableau", "Power BI", "Excel", "None"]
        },
        {
          "id": "q-multiselect-dropdown",
          "prompt": "Which charts have you used before?",
          "infoText": "Select the chart types you have used before. You have to select at least 2 options and up to 3 options.",
          "type": "dropdown",
          "placeholder": "Enter your responses",
          "options": [
            "Bar",
            "Bubble",
            "Pie",
            "Stacked Bar",
            "Line",
            "Scatter",
            "Histogram"
          ],
          "minSelections": 2,
          "maxSelections": 3
        },
        {
          "id": "q-checkbox",
          "prompt": "What are position encodings?",
          "minSelections": 2,
          "maxSelections": 2,
          "type": "checkbox",
          "options": ["color", "x-axis", "size", "y-axis"],
          "withOther": true
        }
      ]
    },
    "rectangleBrush_q1": {
      "baseComponent": "scatterPlot",
      "instruction": "How many cars from Japan have a Miles Per Gallon value greater than 35?",
      "parameters": {
        "dataset": "cars",
        "x": "Miles per Gallon",
        "y": "Weight (lbs)",
        "category": "Origin",
        "ids": "id",
        "brushType": "Rectangular Selection"
      },
      "response": [
        {
          "id": "response",
          "prompt": "Answer:",
          "location": "sidebar",
          "type": "numerical",
          "max": 100,
          "min": 0
        }
      ],
      "correctAnswer": [
        {
          "id": "response",
          "answer": 17
        }
      ]
    },
    "canvas_test": {
      "withSidebar": false,
      "baseComponent": "canvas",
      "instruction": "Draw your favorite type of pizza.",
      "parameters": {},
      "response": []
    },
    "canvas_test_image": {
      "withSidebar": false,
      "baseComponent": "canvas",
      "instruction": "Recreate this image.",
      "parameters": {},
      "response": [
        {
          "id": "title",
          "type": "textOnly",
          "prompt": "![image](./ai-benchmark/assets/draw-stimuli/moon-star.png)",
          "restartEnumeration": true,
          "location": "sidebar"
        }
      ]
    },
    "creative_writing": {
      "withSidebar": false,
      "type": "questionnaire",
      "response": [
        {
          "id": "q-name",
          "required": true,
          "prompt": "Recall the last time you saw an engaging chart and describe why it was engaging to you. Also describe where you encountered the chart.",
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "I saw this chart..."
        }
      ]
    },
    "writing-task-tabular-jsonc": {
      "withSidebar": false,
      "description": "writing task with tabular data",
      "instruction": "Please refer to the data structure shown in the figure and convert it into JSONC format. If needed, click the top-right help button to review syntax rules.",
      "type": "react-component",
      "nextButtonLocation": "sidebar",
      "path": "ai-benchmark/assets/Editor.tsx",
      "parameters": {
        "language": "jsonc",
        "imagePath": "ai-benchmark/assets/draw-stimuli/tabular_write.png",
        "type": "writing",
        "tabular": false
      },
      "response": [
        {
          "id": "error",
          "prompt": "",
          "hidden": true,
          "type": "reactive",
          "required": false
        },
        {
          "id": "writing-task-tabular-jsonc",
          "prompt": "Are you sure to submit your answer?",
          "type": "radio",
          "location": "sidebar",
          "required": true,
          "options": ["Yes"]
        }
      ]
    },
    "wapo-none-insight": {
      "withSidebar": false,
      "baseComponent": "chart-stimulus-insight",
      "parameters": {
        "exampleId": "wapo",
        "textType": "none"
      },
      "response": [
        {
          "id": "q-name",
          "required": true,
          "prompt": "What observations and conclusions can you make based on this slide? Please enter in the box below, one observation per line:",
          "location": "belowStimulus",
          "type": "longText",
          "placeholder": ""
        }
      ]
    },
    "ai-did-you-use": {
      "withSidebar": false,
      "type": "questionnaire",
      "response": [
        {
          "id": "ai-used",
          "prompt": "How much AI did you use in this study?",
          "secondaryText": "This is an important research question in our study. Your response will not impact your compensation. Please answer truthfully.",
          "infoText": "Select one of the options.",
          "location": "aboveStimulus",
          "type": "radio",
          "options": ["Never", "Sometimes", "Most of the time", "Always"]
        }
      ]
    },
    "ai-no-use": {
      "withSidebar": false,
      "type": "questionnaire",
      "response": [
        {
          "id": "ai-no-use-reason",
          "prompt": "Why did you not use AI?",
          "secondaryText": "This is an important research question in our study. Your response will not impact your compensation. Please answer truthfully.",
          "infoText": "Select all options that apply.",
          "type": "checkbox",
          "withOther": true,
          "optionOrder": "random",
          "options": [
            "Inauthentic/invalid",
            "Unethical/immoral",
            "Unnecessary",
            "Against rules",
            "Preference",
            "Unfamiliar",
            "Ineffective"
          ]
        },
        {
          "id": "q-short-text",
          "prompt": "Please describe in detail why you chose to not use AI.",
          "secondaryText": "This is an important research question in our study. Your response will not impact your compensation. Please answer truthfully.",
          "infoText": "Your response can be a paragraph.",
          "type": "longText",
          "placeholder": "Enter your answer here"
        }
      ]
    },
    "ai-use": {
      "withSidebar": false,
      "type": "questionnaire",
      "response": [
        {
          "id": "ai-tool-use",
          "prompt": "Which of the following did you use? Select multiple if you used more than one.",
          "secondaryText": "This is an important research question in our study. Your response will not impact your compensation. Please answer truthfully.",
          "infoText": "Select the AI tool(s) you used during this study.",
          "type": "checkbox",
          "withOther": true,
          "optionOrder": "random",
          "options": [
            "ChatGPT",
            "Gemini",
            "Copilot",
            "Claude",
            "Perplexity",
            "Quillbot",
            "Mistral"
          ]
        },
        {
          "id": "ai-use-reason",
          "prompt": "Why did you use AI?",
          "secondaryText": "This is an important research question in our study. Your response will not impact your compensation. Please answer truthfully.",
          "infoText": "Select all options that apply.",
          "type": "checkbox",
          "withOther": true,
          "optionOrder": "random",
          "options": [
            "Need help expresssing thoughts",
            "AI will be faster",
            "Unclear instructions",
            "AI will give higher quality answer",
            "Need to write a long answer",
            "Have nothing to say",
            "Too many writing questions",
            "Need help with translation"
          ]
        },
        {
          "id": "q-short-text",
          "prompt": "Please describe in detail how and why you used AI.",
          "secondaryText": "This is an important research question in our study. Your response will not impact your compensation. Please answer truthfully.",
          "infoText": "Your response can be a paragraph.",
          "type": "longText",
          "placeholder": "Enter your answer here"
        }
      ]
    }
  },
  "importedLibraries": ["nasa-tlx", "calvi", "beauvis"],
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "consent",
      "Form Elements",
      "rectangleBrush_q1",
      "creative_writing",
      "wapo-none-insight",
      "$nasa-tlx.co.nasa-tlx",
      "$calvi.co.T1",
      "$beauvis.co.4items",
      {
        "order": "fixed",
        "components": ["ai-did-you-use"],
        "skip": [
          {
            "name": "ai-did-you-use",
            "check": "response",
            "responseId": "ai-used",
            "value": "Never",
            "comparison": "equal",
            "to": "ai-no-use"
          }
        ]
      },
      {
        "order": "fixed",
        "components": ["ai-use"],
        "skip": [
          {
            "name": "ai-use",
            "responseId": "ai-use-reason",
            "comparison": "notEqual",
            "value": "banana",
            "check": "response",
            "to": "end"
          }
        ]
      },
      "ai-no-use"
    ]
  }
}
